<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tuesday6.swcd_app.AdminPanel"
    android:background="#0277BD">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_panel_addStain_button"
        android:id="@+id/admin_panel_addStain_button"
        android:background="@drawable/buttonshape"
        android:textColor="#EDE7F6"
        android:padding="15dp"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_panel_editStain_button"
        android:id="@+id/admin_panel_editStain_button"
        android:background="@drawable/buttonshape"
        android:textColor="#EDE7F6"
        android:padding="15dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/admin_panel_addStain_button"
        android:layout_alignParentEnd="true" />








</RelativeLayout>
