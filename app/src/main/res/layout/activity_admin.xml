<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".admin">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="137dp"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="stain_name"
            android:id="@+id/stain_id"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="184dp"
            android:layout_height="46dp"
            android:id="@+id/editText"
            android:layout_row="0"
            android:layout_column="1"
            android:inputType="text"
            android:layout_columnSpan="12"
            android:gravity="fill"
             />

        <TextView
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Surface"
            android:id="@+id/SurfaceType"
            android:layout_row="1"
            android:layout_column="0" />

        <TableLayout
            android:layout_width="329dp"
            android:layout_height="62dp"
            android:layout_row="2"
            android:layout_column="0">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carpet"
                    android:id="@+id/carpet_notes_admin"
                    android:layout_row="1"
                    android:layout_column="12" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tile"
                    android:id="@+id/tile_notes_admin"
                    android:layout_row="2"
                    android:layout_column="14" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area Rugs"
                    android:id="@+id/area_rugs_admin"
                    android:layout_row="3"
                    android:layout_column="17" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upholstery"
                    android:id="@+id/upholstery_admin"
                    android:layout_row="4"
                    android:layout_column="19" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Carpet Steps"
            android:id="@+id/carpet_admin_label"
            android:layout_row="5"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:id="@+id/carpet_admin_notes"
            android:layout_row="8"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tile Steps"
            android:id="@+id/tile_notes"
            android:layout_row="13"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_row="14"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Area Rugs"
            android:id="@+id/area_rugs_notes"
            android:layout_row="15"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_row="16"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Upholstery"
            android:id="@+id/Upholstery_notes"
            android:layout_row="17"
            android:layout_column="0" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText5"
            android:layout_row="18"
            android:layout_column="0" />

    </GridLayout>
</RelativeLayout>